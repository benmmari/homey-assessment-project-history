<% content_for :title, "Sign In" %>

<div class="container mt-5">
  <div class="card shadow-sm p-4 mx-auto" style="max-width: 500px;">
    <h2 class="mb-4 text-center">Sign In</h2>

    <%= form_with(model: resource, url: session_path(resource_name), local: true, class: "needs-validation") do |f| %>
      
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter your email" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
      </div>

      <div class="mb-3 form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Sign In", class: "btn btn-primary" %>
      </div>
    <% end %>

    <p class="mt-3 text-center">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-primary" %> |
      <%= link_to "Sign Up", new_user_registration_path, class: "text-primary" %>
    </p>
  </div>
</div>
