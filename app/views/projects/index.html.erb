<%# Flash Messages %>
<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<% content_for :title, "Projects" %>

<div class="container mt-4">
  <h1 class="mb-4">My Projects</h1>

  <% if @projects.any? %>
    <div class="row">
      <% @projects.each do |project| %>
        <div class="col-md-4">
          <div class="card mb-3 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= link_to project.title, project, class: "text-primary" %></h5>
              <p class="card-text"><%= truncate(project.description, length: 100) %></p>
              <p>Status: <%= status_label(project.status) %></p>
              <p class="text-muted small">
                Created: <%= project.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">No projects yet.</p>
  <% end %>

  <%= link_to "New Project", new_project_path, class: "btn btn-success mt-3" %>
</div>
